<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQL_app.MainPage"
             Title="Player Info">
             
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            >

            <Label x:Name="intro" 
            Text="Give first name of player you want info on: " />
            <Entry x:Name="infoText" Placeholder="Enter name"/>

            <Label x:Name="infoGiven" Text="" />
            <Button x:Name="button1" Text="Change" Clicked="button1_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
